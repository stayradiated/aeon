  "knip": {
    "vite": false,
    "vitest": false,
    "svelte": {
      "entry": [
        "./src/routes/**/+{layout,page,server,error}{,.server}.{svelte,ts}",
        "./src/hooks.client.ts",
        "./src/hooks.server.ts",
        "./src/**/*.test.ts",
        "vite.config*.ts"
      ],
      "project": [
        "./src/**/*.ts"
      ]
    },
    "paths": {
      "$env/*": [
        "./node_modules/@sveltejs/kit/src/runtime/env/*"
      ]
    },
    "ignore": [
      ".kanelrc.cjs",
      "__legacy/**",
      "gmrc.cjs",
      "justfile",
      "prod-server.js",
      "scripts/db/snapshot-schema.ts",
      "src/lib/__generated__/**",
      "src/lib/server/db/log-query.ts"
    ],
    "ignoreDependencies": [
      "@biomejs/biome",
      "graphile-migrate",
      "kanel",
      "kanel-kysely",
      "kanel-zod",
      "svelte-check"
    ],
    "ignoreBinaries": [
      "just"
    ],
    "ignoreExportsUsedInFile": {
      "type": true
    }
  },
  "pnpm": {
    "patchedDependencies": {
      "kanel-zod": "patches/kanel-zod.patch",
      "replicache": "patches/replicache.patch"
