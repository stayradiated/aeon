    "svelte-check": "4.3.6",
    "test-fixture-factory": "2.1.0",
    "type-fest": "5.4.3",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vite": "7.3.1",
    "vitest": "4.0.18"
  },
  "knip": {
    "vite": false,
    "vitest": false,
    "svelte": {
      "entry": [
        "./src/routes/**/+{layout,page,server,error}{,.server}.{svelte,ts}",
        "./src/hooks.client.ts",
        "./src/hooks.server.ts",
        "./src/**/*.test.ts",
        "vite.config*.ts"
      ],
      "project": [
        "./src/**/*.ts"
      ]
    },
    "paths": {
      "$env/*": [
        "./node_modules/@sveltejs/kit/src/runtime/env/*"
      ]
    },
    "ignore": [
      ".kanelrc.cjs",
      "__legacy/**",
      "gmrc.cjs",
      "justfile",
      "prod-server.js",
      "scripts/db/snapshot-schema.ts",
      "src/lib/__generated__/**",
      "src/lib/server/db/log-query.ts"
    ],
    "ignoreDependencies": [
      "@biomejs/biome",
      "graphile-migrate",
      "kanel",
      "kanel-kysely",
      "kanel-zod",
      "svelte-check"
    ],
    "ignoreBinaries": [
      "just"
    ],
    "ignoreExportsUsedInFile": {
      "type": true
    }
  },
  "pnpm": {
    "patchedDependencies": {
      "kanel-zod": "patches/kanel-zod.patch",
      "replicache": "patches/replicache.patch"
    }
  }
}
